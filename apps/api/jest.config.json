{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "roots": [
    "<rootDir>"
  ],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^~/(.*)$": "<rootDir>/src/$1"
  },
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "verbose": true,
  "setupFilesAfterEnv": [
    "<rootDir>/jest.setup.ts"
  ]
}